.form_image
  .form.form--sign
    %h2.form__title Log in
    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      = render "devise/shared/error_messages", resource: resource
      .form__field
        = f.label :email, class: "form__field__label"
        = f.email_field :email, class: "form__field__input", autofocus: true, autocomplete: "email"
      .form__field
        = f.label :password, class: "form__field__label"
        = f.password_field :password, class: "form__field__input", autocomplete: "current-password"
      = f.submit "Log in", class: "form__submit"


