.form_image
  .form.form--sign
    %h2.form__title Sign up
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = render "devise/shared/error_messages", resource: resource
      .form__field
        = f.label :name, class: "form__field__label"
        = f.text_field :name, class: "form__field__input", autofocus: true
      .form__field
        = f.label :email, class: "form__field__label"
        = f.email_field :email, class: "form__field__input",  autocomplete: "email"
      .form__field
        = f.label :password, class: "form__field__label"
        = f.password_field :password, class: "form__field__input", placeholder: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), autocomplete: "new-password"
      .form__field
        = f.label :password_confirmation, class: "form__field__label"
        = f.password_field :password_confirmation, class: "form__field__input", autocomplete: "new-password"

      = f.submit "Sign up", class: "form__submit"

