=render partial: "common/header"
.form
  %h2.form__title
    OPTION
  = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
    = render "common/error_messages", resource: resource
    .form__field
      = f.label :name, class: "form__field__label"
      = f.text_field :name, class: "form__field__input", autofocus: true
    .form__field
      = f.label :email, class: "form__field__label"
      = f.email_field :email, class: "form__field__input", autocomplete: "email"
    .form__field
      = f.label :password, class: "form__field__label"
      = f.password_field :password, class: "form__field__input", placeholder: "Input only when you want to change", autocomplete: "new-password"
    .form__field
      = f.label :password_confirmation, class: "form__field__label"
      = f.password_field :password_confirmation, class: "form__field__input", autocomplete: "new-password"
      
    = f.fields_for :user_option do |option_field|
      .form__field
        = option_field.label :start, class: "form__field__label"
        = option_field.time_field :start, class: "form__field__input form__field__input--time"
      .form__field
        = option_field.label :end, class: "form__field__label"
        = option_field.time_field :end, class: "form__field__input form__field__input--time"


    = f.submit "Update", class: "form__submit"
